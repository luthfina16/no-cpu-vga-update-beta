# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = tab
tab_width = 8

[*.{c,h}]
indent_brace_style = K&R
insert_final_newline = true
indent_style = tab
indent_size = tab
tab_width = 8

[*.cfg]
indent_style = tab
indent_size = 8

# Defaults of https://github.com/JohnnyMorganz/StyLua
[*.lua]
indent_size = 4
indent_style = space
